<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="../lib/oscal.css"?>
<?xml-model href="../lib/oscal-working.rnc" type="application/relax-ng-compact-syntax"?>
<declarations xmlns="http://scap.nist.gov/schema/oscal">

  <property context="SP800-53" class="number">
    <singleton/>
    <required/>
    <regex>^(AC|AT|AU|CA|CM|CP|IA|IR|MA|MP|PE|PL|PM|PS|RA|SA|SC|SI)[\d\.\-]*$</regex>
  </property>
  <property context="SP800-53" class="priority">
    <singleton/>
    <value>P1</value>
    <value>P2</value>
    <value>P0</value>
    <value>P3</value>
  </property>
  <property context="SP800-53" class="baseline-impact">
    <value>LOW</value>
    <value>MODERATE</value>
    <value>HIGH</value>
  </property>
  <feature context="SP800-53" class="statement">
    <singleton/>
    <required/>
  </feature>
  <statement context="SP800-53" class="guidance">
    <singleton/>
  </statement>
  <feature context="SP800-53" class="objective">
    <singleton/>
    <required/>
  </feature>
  <feature context="SP800-53" class="assessment"/>
  <!-- can repeat -->

  <property context="SP800-53-enhancement" class="number">
    <singleton/>
    <required/>
    <value><inherit/>
      <autonum>(1)</autonum></value>
  </property>
  <property context="SP800-53-enhancement" class="baseline-impact">
    <value>LOW</value>
    <value>MODERATE</value>
    <value>HIGH</value>
  </property>
  <feature context="SP800-53-enhancement" class="statement">
    <singleton/>
    <required/>
  </feature>
  <statement context="SP800-53-enhancement" class="guidance">
    <singleton/>
  </statement>
  <feature context="SP800-53-enhancement" class="objective">
    <singleton/>
    <required/>
  </feature>
  <feature context="SP800-53-enhancement" class="assessment"/>

  <!--'number' properties are not given on feat.statement -->
  <statement context="statement" class="description">
    <singleton/>
    <required/>
  </statement>

  <feature context="statement" class="statement-item"/>
  
  <feature context="statement-item" class="statement-subitem"/>
  
  <property context="statement-item" class="number">
    <singleton/>
    <required/>
    <value><inherit/><autonum>a.</autonum></value><!-- in controls -->
    <value><inherit/><autonum>(a)</autonum></value><!-- in subcontrols -->
  </property>
  <property context="statement-subitem" class="number">
    <singleton/>
    <required/>
    <value><inherit/><autonum>1.</autonum></value><!-- in controls -->
    <value><inherit/><autonum>(1)</autonum></value><!-- in subcontrols -->
  </property>
  <property context="statement-item statement-subitem" class="description">
    <singleton/>
    <required/>
  </property>

  <property context="objective" class="decision">
    <singleton/>
    <!--<required/> not required because objectives are nested; only lowest level has decision given. -->
  </property>
  
  <!-- Note recursion: objectives contain objectives -->
  <feature context="objective" class="objective"/>
  <property context="objective" class="number">
    <singleton/><!-- outer (wrapper) objectives are not numbered explicitly -->
  </property>

  <property context="assessment" class="method">
    <singleton/>
    <required/>
    <value>EXAMINE</value>
    <value>INTERVIEW</value>
    <value>TEST</value>
  </property>
  <property context="assessment" class="object">
    <required/>
  </property>

</declarations>
