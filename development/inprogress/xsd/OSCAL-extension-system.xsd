    <!-- ****************************************************** -->
    
    <!-- a system comprises a suite of components -->
    <si:element name="cpe-identifier" type="si:string"/>
    <si:element name="swid-identifier" type="si:string"/>
    <si:element name="impact" type="si:string"/>
    <si:element name="level" type="si:string"/>
    <si:element name="serviceLayer" type="si:string"/>
    
    <si:element name="component" >
        <si:annotation>
            <si:documentation>components are...</si:documentation>
        </si:annotation>
        <si:complexType>
            <si:sequence>
                <si:element maxOccurs="1" minOccurs="1" name="id" type="si:string"/>
                <si:element maxOccurs="1" minOccurs="1" name="name" type="si:string"/>
            </si:sequence>
        </si:complexType>
    </si:element>
    
    <!-- actor element essential for capturing system description that includes human activity ; including SLAs -->
    <si:element name="actor" >
                <si:annotation>
                    <si:documentation>Actor(s) as persons or organizations, their roles, and their contact information.</si:documentation>
                </si:annotation>
                <si:complexType>
                    <si:sequence>
                        <si:element maxOccurs="1" minOccurs="1" name="name" type="si:string"/>
                        <si:element maxOccurs="1" minOccurs="1" name="type" type="si:string"/>
                        <!-- type may be person, organization, or machine -->
                        <si:element minOccurs="0" name="role" type="si:string">
                            <!-- possible restriction of roles allowed by actors -->

<!--                           <si:restriction base="si:string">
	                           <si:enumeration value="owner"/>
	                           <si:enumeration value="security-representative"/>
	                           <si:enumeration value="authorizing-official"/>
	                           <si:enumeration value="service-provider"/>
	                           <si:enumeration value="broker"/>
	                           <si:enumeration value="technical-broker"/>
	                           <si:enumeration value="auditor"/>
	                           <si:enumeration value="consumer"/>
	                           <si:enumeration value="carrier"/>
	                           <si:enumeration value="other"/>
                        	</si:restriction> 
                        	
                       		Defined in FedRAMP template:
                       		Information System Owner
							Authorizing Official
							Other Designated Contacts: Management Contact, Technical Contact, etc 
							Security Contacts: CSP Name Internal ISSO, AO ISSO, etc 
							Privacy Point Of Contact
                        	-->
                        	
                        </si:element>
                        <si:element minOccurs="0" name="title" type="si:string"/>
                        <si:element minOccurs="0" name="organization" type="si:string"/>
                        <si:element minOccurs="0" name="contact-info" type="si:string"/>
                        <si:element minOccurs="0" name="description" type="si:string"/>
                    </si:sequence>
                </si:complexType>
    </si:element>
    
    
