<?xml version="1.0" encoding="UTF-8"?>
<si:schema 
    xmlns:si="http://www.w3.org/2001/XMLSchema" 
    xmlns:common="http://oscal.nist.gov/schema/common"
    xmlns:xsd="http://oscal.nist.gov/schema/core"
    elementFormDefault="qualified" 
    targetNamespace="http://oscal.nist.gov/schema/extension-system">

    <si:import namespace="http://oscal.nist.gov/schema/common" schemaLocation="OSCAL-common.xsd">
    </si:import>
    <si:import namespace="http://oscal.nist.gov/schema/core" schemaLocation="OSCAL-core.xsd">
    </si:import>

    <!-- ****************************************************** -->
    <!-- schema additions based on FedRAMP template -->
    
    <!-- Cloud Service Provider name -->
    <si:element name="csp-name" type="si:string"/>
    
    <si:element name="information-system-name" type="si:string"/>
    <si:element name="information-system-abbreviation" type="si:string"/>
    <si:element name="prepared-by" type="si:string"/>
    <si:element name="prepared-for" type="si:string"/>
    
    <!-- based on FIPS-199 categories -->
    <si:element name="system-sensitivity-level" type="si:string"/>
    <si:element name="system-security-categorization" type="si:string"/>
    <!-- Note that sensitivity and security categorization 
    should arguably be known in order to determine which profile (overlay) to use -->
    
    <!-- 
    <si:element name="information-system-owner" type="si:actor"/>
