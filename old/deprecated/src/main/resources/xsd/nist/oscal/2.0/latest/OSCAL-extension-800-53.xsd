<?xml version="1.0" encoding="UTF-8"?>
<xs:schema 
    xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    xmlns:common="http://oscal.nist.gov/schema/common"
    elementFormDefault="qualified" targetNamespace="http://oscal.nist.gov/schema/extension-catalog-800-53"> 

    <xs:import namespace="http://oscal.nist.gov/schema/common" schemaLocation="OSCAL-common.xsd"></xs:import>

    
    <xs:element name="priority" type="xs:string"/>
    <xs:element name="supplemental-guidance">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="description" type="xs:string" minOccurs="1" maxOccurs="1"/>
                <xs:element name="related" type="xs:token" minOccurs="0" maxOccurs="unbounded"/>
                <xs:element name="link" type="common:linkType" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="withdrawn">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="incorporated-into" minOccurs="0" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

