                <tailor>
                    <id>TBD</id>
                    <id>TBD2</id>
                    <properties>
                        <implementation-detail>
                            <description>AC-2 ACCOUNT MANAGEMENT</description>
                            <statement>
                                <number>AC-2a.</number>
                                <description>Types of system accounts will be USER, with read only privileges, and ADMINISTRATOR, with read and write privileges.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2b.</number>
                                <description>System owners are responsible for managing all system accounts.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2c.</number>
                                <description>System accounts will be created in a need to know basis.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2d.</number>
                                <description>All user and administrator accounts and their corresponding privileges will be specifically approved by the system owner.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2e.</number>
                                <description>Users will request accounts by contacting the system owner for their authorization and approval.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2f.</number>
                                <description>After system owner authorization and approval, system administrators will create, modify, disable, and remove system accounts.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2g.</number>
                                <description>System audit logs will be reviewing daily by the system administrators for unusual or inappropriate user activity and system will be reviewed daily for any unauthorized accounts.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2h.</number>
                                <description>System owners will be notified when user accounts are no longer required, when users are terminated or are transferred, or when the user roles are changed.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2i.</number>
                                <description>System administrators will create system accounts and will provide system access after the system owner authorizes and approves access and identifies roles and privileges for the user.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2j.</number>
                                <description>All system accounts will be reviewed semi-annually.</description>
                            </statement>
                            <statement>                           
                                <number>AC-2k.</number>
                                <description>Per organizational policy, shared or group accounts are not permitted.</description>
                            </statement>
                        </implementation-detail>                        
                    </properties>
                </tailor>
            </tailoring>
